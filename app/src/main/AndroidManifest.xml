<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pt.orgmir.catanscorecounter.app" >

  <application
    android:allowBackup="true"
    android:icon="@drawable/icon_catan_makeshift"
    android:label="@string/app_name"
    android:theme="@style/AppTheme" >
    <activity
      android:name=".game.CatanGameListActivity"
      android:label="@string/app_name" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".game.CatanGameDetailActivity"
      android:label="@string/title_catangame_detail"
      android:parentActivityName=".game.CatanGameListActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="pt.orgmir.catanscorecounter.app.game.CatanGameListActivity" />
    </activity>
    <activity
      android:name=".game.CatanGameEditActivity"
      android:label="@string/title_catangame_edit"
      android:parentActivityName=".game.CatanGameListActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="pt.orgmir.catanscorecounter.app.game.CatanGameListActivity" />
    </activity>
    <activity
      android:name=".player.CatanPlayerListActivity"
      android:label="@string/title_catan_player_list"
      android:parentActivityName=".game.CatanGameListActivity"
      >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="pt.orgmir.catanscorecounter.app.game.CatanGameListActivity" />
    </activity>
    <activity
      android:name=".player.CatanPlayerEditActivity"
      android:label="@string/title_catan_player_edit"
      android:parentActivityName=".player.CatanPlayerListActivity" >
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="pt.orgmir.catanscorecounter.app.player.CatanPlayerListActivity" />
    </activity>
  </application>

</manifest>
